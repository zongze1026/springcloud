<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zongze.dao.PointMapper">

    <update id="addPoint" parameterType="com.zongze.entity.Point">
        update point
        <set>
            <trim prefixOverrides=",">
                <if test="pointNum > 0">,point_num = point_num + #{pointNum}</if>
            </trim>
            where id = #{id}
        </set>
    </update>

</mapper>